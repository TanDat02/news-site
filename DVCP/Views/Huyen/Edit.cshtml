                        @Html.ValidationMessageFor(model => model.phanLoai, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.thuTuSapXep, htmlAttributes: new { @class = "control-label col-md-2" })
