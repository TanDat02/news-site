@model DVCP.Models.Huyen

@{
    Layout = null;
}

<div class="modal-dialog" style="width: 750px;">
    <div class="modal-content" style="border-radius:0px;">
        <div class="modal-header" style="background:#0277BD;color:white;">

            <h5 class="modal-title"><i class="fa fa-edit"></i><span> Cập nhật</span></h5>
            <a href="#" class="close" data-dismiss="modal">&times;</a>
        </div>
        <div class="modal-body" style="font-size:13px;">
            @using (Ajax.BeginForm("Edit", "Huyen", new AjaxOptions { HttpMethod = "Post", OnSuccess = "UpdateSuccess" }, new { @class = "form-horizontal", @id = "editFormId", role = "form" }))
            {

                @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.huyenId)

                <div class="form-group">
                    @Html.LabelFor(model => model.tinhId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tinhId, new { htmlAttributes = new { @class = "form-control", style = "min - width: 100 % !important; ", @placeholder = "Tên Tỉnh", @title = "Tên Tỉnh", autocomplete = "off", @id = "idAddhoten" } })
                        @Html.ValidationMessageFor(model => model.tinhId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.maTinh, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.maTinh, new { htmlAttributes = new { @class = "form-control", style = "min - width: 100 % !important; ", @placeholder = "Tên Tỉnh", @title = "Tên Tỉnh", autocomplete = "off", @id = "idAddhoten" } })
                        @Html.ValidationMessageFor(model => model.maTinh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.maHuyen, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.maHuyen, new { htmlAttributes = new { @class = "form-control", style = "min - width: 100 % !important; ", @placeholder = "Tên Tỉnh", @title = "Tên Tỉnh", autocomplete = "off", @id = "idAddhoten" } })
                        @Html.ValidationMessageFor(model => model.maHuyen, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.tenHuyen, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tenHuyen, new { htmlAttributes = new { @class = "form-control", style = "min - width: 100 % !important; ", @placeholder = "Tên Tỉnh", @title = "Tên Tỉnh", autocomplete = "off", @id = "idAddhoten" } })
                        @Html.ValidationMessageFor(model => model.tenHuyen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.phanLoai, htmlAttributes: new { @class = "control-label col-md-2" })
