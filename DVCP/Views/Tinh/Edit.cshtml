@model DVCP.Models.Tinh

@{
    Layout = null;
}

<div class="modal-dialog" style="width: 750px;">
    <div class="modal-content" style="border-radius:0px;">
        <div class="modal-header" style="background:#0277BD;color:white;">

            <h5 class="modal-title"><i class="fa fa-edit"></i><span> Cập nhật</span></h5>
            <a href="#" class="close" data-dismiss="modal">&times;</a>
        </div>
        <div class="modal-body" style="font-size:13px;">
            @using (Ajax.BeginForm("Edit", "Tinh", new AjaxOptions { HttpMethod = "Post", OnSuccess = "UpdateSuccess" }, new { @class = "form-horizontal", @id = "editFormId", role = "form" }))
            {

                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.tinhId)


                    <div class="form-group">
                        @Html.LabelFor(model => model.tenTinh, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.tenTinh, new { htmlAttributes = new { @class = "form-control", style = "min - width: 100 % !important; ", @placeholder = "Tên Tỉnh", @title = "Tên Tỉnh", autocomplete = "off", @id = "idAddhoten" } })
                            @Html.ValidationMessageFor(model => model.tenTinh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.phanLoai, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.phanLoai, new { htmlAttributes = new { @class = "form-control", style = "min - width: 100 % !important; ", @placeholder = "Phân Loại", @title = "Phân Loại", autocomplete = "off", @id = "idAddhoten" } })
                            @Html.ValidationMessageFor(model => model.phanLoai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.thuTuSapXep, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.thuTuSapXep, new { htmlAttributes = new { @class = "form-control", style = "min - width: 100 % !important; ", @placeholder = "Thứ Tự Sắp Xếp", @title = "Thứ Tự Sắp Xếp", autocomplete = "off", @id = "idAddhoten" } })
                            @Html.ValidationMessageFor(model => model.thuTuSapXep, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.danSo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.danSo, new { htmlAttributes = new { @class = "form-control", style = "min - width: 100 % !important; ", @placeholder = "Dân Số", @title = "Dân Số", autocomplete = "off", @id = "idAddhoten" } })
                            @Html.ValidationMessageFor(model => model.danSo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.dienTich, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.dienTich, new { htmlAttributes = new { @class = "form-control", style = "min - width: 100 % !important; ", @placeholder = "Diện Tích", @title = "Diện Tích", autocomplete = "off", @id = "idAddhoten" } })
                            @Html.ValidationMessageFor(model => model.dienTich, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ngayChinhSua, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.ngayChinhSua, "{0:dd/MM/yyyy}", new { @class = "form-control", @style = "min-width: 100%!important;", @placeholder = "Ngày Chỉnh Sửa", @title = "Ngày Chỉnh Sửa", autocomplete = "off", @id = "idAddngaysinh" })
                            @Html.ValidationMessageFor(model => model.ngayChinhSua, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.tinhId, "Tên Tỉnh", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("tinhId", null, htmlAttributes: new { @class = "form-control", @style = "min-width: 100%!important;", @placeholder = "Chọn tỉnh", @title = "Chọn tỉnh", autocomplete = "off", @id = "idEdittinhid" })
                            @Html.ValidationMessageFor(model => model.tinhId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnEdit" onclick="return SuaSave();" style="width:80px;border-radius: 0px;"><i class="fa fa-save"></i> Lưu</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" style="width:80px;border-radius: 4px;border: 1px solid #ccc"><i class="fa fa-close"></i> Thoát</button>
                    </div>


                </div>

            }
        </div>
    </div>
</div>


